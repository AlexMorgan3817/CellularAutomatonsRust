{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo", "command": "build",
			"args": ["--release"],
			"problemMatcher": ["$rustc"],
			"group": "build", "label": "Build Bin Release"
		},
		{
			"type": "cargo", "command": "build",
			"args": ["--lib"],
			"problemMatcher": ["$rustc"],
			"group": "build", "label": "Build Debug"
		},
		{
			"type": "cargo", "command": "build",
			"args": ["--release", "--lib"],
			"problemMatcher": ["$rustc"],
			"group": "build", "label": "Build Release"
		},
		{
			"type": "cargo", "command": "test",
			"args": ["--release", "--", "--nocapture", "--test-threads=1"],
			"problemMatcher": ["$rustc"],
			"group": "build", "label": "Test Release"
		}
	]
}