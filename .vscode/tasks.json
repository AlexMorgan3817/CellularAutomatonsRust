{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo", "command": "build",
			"args": ["--release"],
			"problemMatcher": ["$rustc"],
			"group": "build", "label": "Build Bin Release"
		},
		{
			"type": "cargo", "command": "test",
			"args": ["--release", "--all", "--", "--nocapture", "--test-threads=1"],
			"problemMatcher": ["$rustc"],
			"group": "build", "label": "Test Release"
		},
		{
			"type": "cargo", "command": "run",
			"args": ["--release"],
			"problemMatcher": ["$rustc"],
			"group": "build", "label": "Run Release"
		},
		{
			"type": "cargo", "command": "runx",
			"args": ["--release"],
			"problemMatcher": ["$rustc"],
			"group": "build", "label": "Run Main Test"
		}
	]
}